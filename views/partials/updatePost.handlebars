<article class="new-page">
  <section class="update-form-page">
    <div class="form-heading">
      <h2>
        Update Post
      </h2>
    </div>
    <div class="form-section">
      <form class="update-post-form">
        <div class="post-title-section">
          <label for="post-title">Title</label>
          <input
            type="text"
            name="post-title"
            id="post-title"
            value="{{post.title}}"
          />
        </div>
        <div class="post-content">
          <label for="post-content">Content</label>
          <textarea
            class="entry-field"
            id="post-content"
            name="post-content"
          >{{post.content}}</textarea>
        </div>
        <button type="submit">Update Post</button>
        <button type="button" class="delete-post-btn">Delete Post</button>
      </form>
    </div>
  </section>
</article>

{{#if loggedIn}}
  <script src="../../public/js/updatePost.js"></script>
  <script src="../../public/js/deletePost.js"></script>
{{/if}}